
.container {
		padding: 24rpx;
}
.card_view {
		width: 100%;
		background-color: #fff;
		border-radius: 16rpx;
		padding: 20rpx;
		margin-bottom: 20rpx;
		box-sizing: border-box;
}
.header_view {
		width: 100%;
		height: 140rpx;
		margin-left: 16rpx;
		display: flex;
		align-items: center;
}
.header_view image {
		width: 120rpx;
		height: 120rpx;
		margin-right: 20rpx;
		border-radius: 100rpx;
}
.header_view text {
		margin-right: 10rpx;
		font-size: 36rpx;
}
.items {
		display: flex;
		padding: 10rpx;
		height: 64rpx;
		border-radius: 10rpx;
		align-items: center;
}
.items text {
		margin-left: 12rpx;
		position: relative;
		bottom: 2rpx;
}
.items:active {
		background-color: #f1f2f7;
}

	/* 退出登录按钮 */
.button {
		width: 100%;
		height: 78rpx;
		background-color: #cc1d34;
		border-radius: 20rpx;
		margin: auto;
		color: white;
		font-size: 30rpx;
		margin-bottom: 0;
		display: flex;
		align-items: center;
		justify-content: center;
}
.button:active {
		background-color: #cc4143;
}
.rank-header{
		display: flex;
		align-items: center;
}
.rank-icon{
		padding: 10rpx;
		margin-right: 10rpx;
}
.rank-name{
}
.rank-click{
		margin-left: auto;
		display: flex;
		align-items: center;
		justify-content: space-around;
}
.rank-change{
		margin-right: 10rpx;
}
.rank-select{
		margin-left: auto;
}
.empty-block{
		height: 7vw;
}
.change-button {
		width: 20vw;
		height: 18rpx;
		background-color: #cc1d34;
		border-radius: 20rpx;
		
		display: flex;
		align-items: center;
		justify-content: center;
}
.change-button:active {
		background-color: #cc4143;
}
.rank-table {
	  margin: 10rpx 5rpx 0 15rpx;
}
.uni-table th,
	.uni-table td {
	  padding: 1rpx;
}
.rank-list-index {
	  display: flex;
	  align-items: center;
	  justify-content: center;
	  align-items: center;
}
.badge-icon {
	  width: 60rpx; /* 调整图标大小 */
	  height: 60rpx;
	  margin-right: 5rpx;
}
.rank-number {
	  font-size: 28rpx; /* 艺术字数字大小 */
	  color: #cc1d34; /* 艺术字数字颜色 */
	  font-weight: bold;
}
.rank-list-name,
	.rank-list-count,
	.rank-list-time {
	  font-size: 26rpx;
	  color: #333;
}
.uni-select{
		height: 60rpx !important;
}
